{
    "compilerOptions": {
      "lib": ["es2023"],
      "module": "NodeNext",
      "target": "es2022",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "NodeNext",
      "outDir": "./lib",
    },
    "include": [
      "src",
      "lib"
    ]
  }